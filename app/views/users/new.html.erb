<div class="singup-title">
    <h1 align="center">Signup for alpha blog</h1>
</div>

<%= render 'shared/errors', obj: @user %>
<div class="row">
    <div class="col-xs-12">
        <%= form_for(@user, :html => {class: "form-horizontal", role: "form "}) do |f| %>
        <div class="form-group">
            <div class="control-label col-sm-2">
                <%= f.label :username %>
            </div>
            <div class="col-sm-6">
                <%= f.text_field :username, class: "form-control", placeholder: "Enter Username", autofocus: true %>
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-sm-2">
                <%= f.label :email %>
            </div>
            <div class="col-sm-6">
                <%= f.email_field :email, class:"form-control", placeholder: "Enter Email"%>
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-sm-2">
                <%= f.label :password %>
            </div>
            <div class="col-sm-6">
                <%= f.password_field :password, class:"form-control", placeholder: "Enter Password"%>
            </div>
            <div class="form-group button-offset">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit "Sign up", class:"btn btn-primary btn-lg"%>          
                </div>
            </div>
        </div>
        <% end %>
        <div class="col-xs-5 col-xs-offset-1">
            [<%= link_to "Cancel and go back to articles listing", articles_path %> ]
        </div>
    </div>
</div>
